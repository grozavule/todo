<%= button_to "Add Task", new_task_path, method: :get, class: "task-btn mb-3" %>
<content>
  <h1>Tasks</h1>
  <div id="tasks">
    <% if @tasks.length > 0 %>
      <table class="table table-striped">
        <thead>
          <th></th>
          <th>Task Name</th>
          <th>Deadline</th>
        </thead>
        <tbody>
          <% @tasks.each do |task| %>
            <%= render task %>
            <!--<p>
              <%= link_to "Show this task", task %>
            </p> -->
          <% end %>
        </tbody>
      </table>
    <% else %>
      <div class="alert alert-warning">
        No tasks have been added yet
      </div>
    <% end %>
  </div>
</content>
