<content>
  <h1>Edit Task</h1>
  <%= form_for(@task) do |t| %>
    <div class="mb-3">
      <%= t.label :name %>
      <%= t.text_field :name, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= t.label :description %>
      <%= t.text_area :description, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= t.label :deadline %>
      <%= t.datetime_local_field :deadline, min: Date.today, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= t.label :date_completed %>
      <%= t.date_field :date_completed, max: Date.today, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= t.label :priority %>
      <%= t.number_field :priority, min:1, step: 1, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= t.submit "Save Changes", class: 'task-btn' %>
    </div>
  <% end %>
</content>
